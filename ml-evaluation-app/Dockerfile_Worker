FROM python:3.12-slim

WORKDIR /app

RUN pip install poetry==1.8.3

COPY pyproject.toml poetry.lock ./

RUN poetry config virtualenvs.create false \
 && poetry lock --check \
 && poetry install --only main

COPY . .

RUN chmod +x entrypoint.sh
WORKDIR /app

ENTRYPOINT ["bash", "-c", "./entrypoint.sh && exec celery -A app.celery_worker.celery_app worker --loglevel=info --pool=solo --hostname=\"${HOSTNAME_PREFIX:-worker}@%h\""]